class Solution {
public:
    vector<int> sortArrayByParity(vector<int>& nums) {
        int n=nums.size();
        int idx=n-1,i=0;
        while(i<idx){
            if(nums[i]%2==0){
                i++;
                continue;
            }
            if(nums[idx]%2==1){
                idx--;
                continue;
            }
            swap(nums[i],nums[idx]);
            i++;
            idx--;
        }
        return nums;
    }
};